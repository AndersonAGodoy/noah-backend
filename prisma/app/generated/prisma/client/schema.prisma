generator client {
  provider = "prisma-client-js"
  output   = "app/generated/prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Sermon {
  id              String           @id @default(cuid())
  title           String
  description     String           @default("Sem descrição")
  speaker         String           @default("Desconhecido")
  duration        String           @default("00:00")
  date            String           @default("2023-01-01")
  time            String           @default("00:00")
  eventType       String           @default("Culto")
  published       Boolean          @default(false)
  references      Reference[]
  contentSections ContentSection[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("sermons")
}

model Reference {
  id        String @id @default(cuid())
  reference String
  text      String
  sermonId  String
  sermon    Sermon @relation(fields: [sermonId], references: [id], onDelete: Cascade)
}

model ContentSection {
  id       String      @id @default(cuid())
  type     ContentType
  content  String
  sermonId String
  sermon   Sermon      @relation(fields: [sermonId], references: [id], onDelete: Cascade)
}

enum ContentType {
  parágrafo
  header
  citação
}
